<Window x:Class="ICSheet5e.Views.AddSubClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICSheet5e.Views"
        mc:Ignorable="d"
        Title="AddSubClassWindow" Height="300" Width="300">
    <DockPanel>
        <Label DockPanel.Dock="Top">Class:</Label>
        <ComboBox ItemsSource="{Binding Path=Classes}" SelectedItem="{Binding Path=SelectedClass}" DockPanel.Dock="Top"></ComboBox>
        <Label DockPanel.Dock="Top">Subclass:</Label>
        <ComboBox ItemsSource="{Binding Path=Subclasses}" SelectedItem="{Binding Path=SelectedSubclass}" DockPanel.Dock="Top"/>
        <ListBox ItemsSource="{Binding Path=Features}" DockPanel.Dock="Top" MinHeight="135"></ListBox>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Height="30" IsCancel="True">Cancel</Button>
            <Button Height="30" IsDefault="True" Margin="10,0,0,0" Command="{Binding Path=AddSubclassCommand}">Add Subclass</Button>
        </StackPanel>
    </DockPanel>
</Window>
