<UserControl x:Class="ICSheet5e.Views.SpellCastingPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <ComboBox ItemsSource="{Binding SpellLevels}" SelectedIndex="{Binding SelectedLevel}"/>
        <ListView Grid.Row="1" ItemsSource="{Binding AllSpells}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Spell Name" DisplayMemberBinding="{Binding Name}" Width="250"/>
                    <GridViewColumn Header="Prepared?" DisplayMemberBinding="{Binding IsPrepared}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
