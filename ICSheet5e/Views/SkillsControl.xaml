<UserControl x:Class="ICSheet5e.Views.SkillsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ICSheet5e.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="200">
    <UserControl.DataContext>
       <vm:SkillViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="SkillViewItem">
            <DockPanel>
                <CheckBox IsChecked="{Binding Path=IsProficient}"/>
                <Label Content="{Binding Path=Bonus}"/>
                <Label Content="{Binding Path=Name}"/>
            </DockPanel>
        </DataTemplate>

    </UserControl.Resources>
    <Border BorderBrush="Black" BorderThickness="2,2,2,2" Background="White" CornerRadius="15">
        <ListView ItemsSource="{Binding Path=Skills}">
            <GridView>
                <GridViewColumn CellTemplate="{StaticResource SkillViewItem}" Width="200"/>
            </GridView>
        </ListView>
    </Border>
</UserControl>
